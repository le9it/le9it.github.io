    border-color: #007bff;
  }
  .panel h3 { margin-top: 0; color: #007bff; }
  
  .status-panel {
    background: var(--panel-bg);
    border: 1px solid var(--border-color);
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 20px;
    /* This makes it span across the grid if you want it to be wide */
    grid-column: 1 / -1; 
  }
  .status-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
  }
  .status-list li {
